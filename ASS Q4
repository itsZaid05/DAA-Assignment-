#include <iostream>
#include <algorithm>
using namespace std;

struct Job {
    char id;
    int deadline;
    int profit;
};

bool cmp(Job a, Job b) {
    return a.profit > b.profit;
}

int main() {
    int n = 5;

    Job jobs[] = {
        {'1',2,100},
        {'2',1,19},
        {'3',2,27},
        {'4',1,25},
        {'5',3,15}
    };

    sort(jobs, jobs + n, cmp);

    int slot[4];
    for(int i = 0; i < 4; i++) slot[i] = -1;

    int profit = 0, count = 0;

    for(int i = 0; i < n; i++) {
        for(int j = jobs[i].deadline; j > 0; j--) {
            if(slot[j] == -1) {
                slot[j] = i;
                profit += jobs[i].profit;
                count++;
                break;
            }
        }
    }

    cout << "Selected Jobs: ";
    for(int i = 1; i <= 3; i++)
        if(slot[i] != -1)
            cout << "J" << jobs[slot[i]].id << " ";

    cout << "Maximum Profit = " << profit;
    return 0;
}
