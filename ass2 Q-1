#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int main() {
    int n = 6;
    int start[]  = {1, 3, 0, 5, 8, 5};
    int finish[] = {2, 4, 6, 7, 9, 9};

    vector<pair<int,int>> a;
    for(int i = 0; i < n; i++)
        a.push_back({finish[i], start[i]});
    sort(a.begin(), a.end());

    int count = 1;
    int lastFinish = a[0].first;

    cout << "Selected activities: ";
    cout << "(" << a[0].second << ", " << a[0].first << ")";
    for(int i = 1; i < n; i++) {
        if(a[i].second >= lastFinish) {
            cout << ", (" << a[i].second << ", " << a[i].first << ")";
            lastFinish = a[i].first;
            count++;
        }
    }

    cout << "number of activities = " << count;
    return 0;
}
